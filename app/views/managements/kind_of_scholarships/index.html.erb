<h1>Listado de Becas</h1>
<div class="dataTable_wrapper">
  <table class="table table-striped table-hover" id="dataTables-scholarships">
   <thead>
     <tr>
       <th>Nombre</th>
       <th>Estado</th>
       <th>Solicitudes</th>
       <th>Fecha inicio</th>
       <th>Fecha fin</th>
       <th>Opciones</th>
     </tr>
   </thead>
   <tbody>
     <% @kind_of_scholarships.each do |sch| %>
       <tr class="odd gradeX" id="sch_<%= "#{sch.id}" %>">
         <td><%= sch.name %></td>
         <td><%= sch.state %></td>
         <td><%= '#' %></td>
         <td><%= custom_datetime sch.starting_date %></td>
         <td><%= custom_datetime sch.ending_date %></td>
         <td>
           <%= link_to 'Show', managements_kind_of_scholarship_path(sch) %> |
           <%= link_to 'Edit', edit_managements_kind_of_scholarship_path(sch) %> | 
           <%= link_to 'Destroy', managements_kind_of_scholarship_path(sch), method: :delete, data: { confirm: 'Are you sure?' }, remote:true %>
         </td>
       </tr>
     <% end %>
   </tbody>
  </table>
  <%= link_to fa_icon("plus-circle", text: "Nueva beca"), new_managements_kind_of_scholarship_path, class:'btn btn-info' %>
  </div>
  <!-- /.table-responsive -->


<script>
  $(document).ready(function() {
    $('#dataTables-scholarships').DataTable({
      responsive: true
    });
  });
</script>
