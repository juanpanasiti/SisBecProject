<h1>Lista de estudiantes registrados</h1>

<div class="dataTable_wrapper">
  <table class="table table-striped table-hover" id="dataTables-students">
   <thead>
     <tr>
       <th>Nombre</th>
       <th>DNI</th>
       <th>Carrera</th>
       <th>E-mail</th>
       <th>Ãšltimo login</th>
       <th>Opciones</th>
     </tr>
   </thead>
   <tbody>
     <% @students.each do |student| %>
       <tr class="odd gradeX" id="student_<%= "#{student.id}" %>">
         <td><%= student.get_full_name %></td>
         <td><%= student.get_dni %></td>
         <td><%= student.get_career %></td>
         <td><%= student.get_email %></td>
         <td><%= calculate_time_ago(student.get_last_login) %></td>
         <td>
           <%= link_to fa_icon("eye", text: ""), managements_profile_path(student), class:'btn btn-success btn-xs' %>
         </td>
       </tr>
     <% end %>
   </tbody>
  </table>
  <%= link_to fa_icon("plus-circle", text: "Nueva beca"), new_managements_kind_of_scholarship_path, class:'btn btn-info' %>
  <script>
  $(document).ready(function() {
    $('#dataTables-students').DataTable({
      responsive: true
    });
  });
  </script>
  </div>
  <!-- /.table-responsive -->
